<%= form_for [:admin, @tag] do |f| %>
  <%= render 'shared/mensajes_de_error',  object: f.object %>
  <div class="field">
    <%= f.label t(".tag_name") %>
    <%= f.text_field :name, class: 'form-control',  autofocus: true %>
  </div>
  <div class="field">
    <%= f.label t(".tag_color") %>
    <%= f.text_field :tag_color, class: 'form-control', placeholder: 'cÃ³digo de color hexadecimal, ejemplo: #F72222' %>
  </div>
  <div class="field">
    <%= f.label "Imagen Principal del Tema" %>
    <% if tag.tag_image.file %>
      <p class="has_media">
        <%= t('.has_image', filename: tag.tag_image.file.filename) %>
      </p>
    <% end %>
    <%= f.file_field :tag_image %>
  </div>
  
  <div class="field">
    <%= f.label "Imagen Secundaria del Tema" %>
    <% if tag.thumbnail.present? %>
      <p class="has_media">
        <%= t('.has_image', filename: tag.thumbnail.file.filename) %>
      </p>
    <% end %>
    <%= f.file_field :thumbnail %>
  </div>

  <div class="field">
    <%= f.label t(".tag_icon") %>
    <% if tag.tag_image.file %>
      <p class="has_media">
        <%= t('.has_image', filename: tag.tag_icon.file.filename) %>
      </p>
    <% end %>
    <%= f.file_field :tag_icon %>
  </div>
  <div class="actions">
    <%= f.submit(data: {disable_with: I18n.t(:processing)}, class: "btn btn-primary") %>
  </div>
<% end %>
<br><hr>
