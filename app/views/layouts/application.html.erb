<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seamos</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://www.google.com/jsapi" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.png' %>

  </head>

  <body>
    <% if session[:session_type] == "web" %>
      <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to root_path, class:'navbar-brand', id: 'logo'  do %>
              <%= image_tag "LogoSeamos.png", class: "center-block"  %>
            <% end %>
          </div>

          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
              <li class="<%= 'nav-li-border' if params[:controller] == 'polls' and params[:action] == 'index_admin'%>">  <%= link_to t('.polls'),admin_polls_path %></li>
              <% if current_user.politico? %>
                <li class="<%= 'nav-li-border' if params[:controller] == 'polls' and params[:action] == 'new' %>">  <%= link_to t('.create_poll'), new_poll_path %> </li>
              <% end %>
              <% if is_admin? %>
                <li class="<%= 'nav-li-border' if params[:controller] == 'users' %>">  <%= link_to t('.users'),admin_validate_users_path %> </li>
                <li class="<%= 'nav-li-border' if params[:controller] == 'admin' %>">  <%= link_to t('.create_admin'),new_admin_path %></li>
                <li class="<%= 'nav-li-border' if params[:controller] == 'tags' %>">  <%= link_to t(:tags_menu),admin_tags_new_path %></li>
                <li class="<%= 'nav-li-border' if params[:controller] == 'dashboard' %>">  <%= link_to t(:admin),admin_dashboard_index_path %></li>
              <% end %>
              <li> </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                 <img src="<%= fb_image %>" class="profile-pic" alt="Cinque Terre">
                <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to session_path, method: :delete do %>
                      <%= t('.logout') %>
                    <%end%>
                  </li>
                </ul>
              </li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </nav>
    <% end %>

    <div id='primary-container' class="container">
      <div class="">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %> alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= message %></div>
        <% end %>
      </div>
      <%= yield %>
    </div>

    <% unless params[:controller] == 'frontend' %>
      <footer id="footer-seamos" >
        <div class="container">
          <p class="text-muted">POWERED BY SEAMOS â€“ DEMOCRACIA DIGITAL</p>
          <p><%= image_tag("favicon.png") %></p>
        </div>
      </footer>
    <% end %>
  </body>
</html>
