<table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Id</th>
        <th>Título</th>
        <th>Autor</th>
        <th>Fecha de cierre</th>
        <th>Sí</th>
        <th>No</th>
        <th>Total Votos</th>
      </tr>
    </thead>
    <tbody>
      <% polls.each do |poll| %>
        <% grouped_by_vote_type = poll.votes.joins(:vote_type)
                                  .group('vote_types.name')
                                  .count('vote_types.id') %>
        <tr>
          <td><%= poll.id %></td>
          <td><%= poll.title %></td>
          <td><%= poll.user.full_name %></td>
          <td><%= poll.closing_date %></td>
          <td style="border-left: 1px solid gainsboro;"><%= grouped_by_vote_type["SI"] %></td>
          <td style="border-left: 1px solid gainsboro;"><%= grouped_by_vote_type["NO"] %></td>
          <td style="border-left: 1px solid gainsboro;"><%= poll.vote_count %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
