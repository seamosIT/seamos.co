<section class="custom-form">
  <br>
  <h3 class="title">Inicio de Sesión</h3>
  <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: "contraseña" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div id="checkbox" class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Ingresar", class:"btn" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</section>

