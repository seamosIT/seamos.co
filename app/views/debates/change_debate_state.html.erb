<div class="android-content mdl-layout__content">
  <a name="top"></a>
  <div class="android-wear-section">
    <div class="android-wear-band">
      <div class="android-wear-band-text">
        <div class="mdl-typography--display-2 mdl-typography--font-thin">
          <%= link_to poll_debates_path(@debate.poll), class: 'mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button' do %>
            <i class="material-icons">navigate_before</i>
          <% end %>
          <span>  <%= t('.created_by')%> <%= @debate.usuario.first_surname %> </span>
          <br>
          <%= link_to publish_debate_path(@debate), class: 'mdl-button mdl-js-button mdl-button--raised', method: :patch do %>
            <%= @debate.published ? t('.unpublish_debate') : t('.publish_debate')  %>
            <i class="material-icons">playlist_add_check</i>
          <%end%>
          <!-- < link_to edit_poll_debate_path(@debate.poll, @debate), class: 'mdl-button mdl-js-button mdl-button--raised' do %>
            Editar
            <i class="material-icons">border_color</i>
          <end%> -->
        </div>
          <br><br><br>
          <p class="mdl-typography--headline mdl-typography--font-thin">
            <%= @debate.title %>
          </p>
      </div>
    </div>
  </div>
</div>

<div class="container">
	<div class="col-md-push-2 col-md-8">
    <% @questions.each_with_index do |question, index| %>
      <h4>Opc #: <%= index +1 %></h4>
      <p><%= question.description%></p>
      <div class="clear"></div>
      <hr>
    <%end%>
  </div>
</div>
