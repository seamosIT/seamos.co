<%= link_to admin_validate_users_path, class: 'mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button' do %>
  <i class="material-icons">navigate_before</i>
<% end %>

<h1><%= t('.validate_user') %> <%= User.model_name.human %></h1>

<table class="table">
  <tr>
    <th> <%= User.human_attribute_name("nombres") %> </th>
    <th> <%= User.human_attribute_name("tipo_de_documento_id") %> </th>
    <th> <%= User.human_attribute_name("numero_documento") %> </th>
    <th> ID de Facebook </th>
    <th> <%= User.human_attribute_name("email") %> </th>
    <th> <%= User.human_attribute_name("fecha_expedicion") %> </th>
    <th colspan="2"></th>
  </tr>
  <tr>
    <td>
      <%= @user.nombres %>
      <%= @user.first_surname %>
      <%= @user.segundo_apellido %>
    </td>
    <td> <%= @user.tipo_de_documento.code_view %> </td>
    <td> <%= @user.numero_documento %> </td>
    <td> <%= @user.uid %> </td>
    <td> <%= @user.email %> </td>
    <td> <%= @user.fecha_expedicion %> </td>
    <td> <%= link_to t(".validate_user"), user_path(@user), class: "btn btn-info", method: :put %> </td>
    <td> <%= link_to t(".destroy_user"), user_path(@user), class: "btn btn-danger", method: :delete, data: {confirm: t(".confirmation")} %> </td>
  </tr>
</table>

