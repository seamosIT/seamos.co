<div id="profile">
   <div id="profile-banner">
      <div class="row profile--banner one"></div>
   </div>
   <div class="container">
      <header class="media">
         <div class="row profile-info-container">
            <div class="col-sm-1 media-left"><img src="<%= current_user.resolve_photo %>" class="media-object" role="presentation"></div>
            <div class="media-body col-sm-10">
               <h4 class="media-heading"> <%= current_user.names %></h4>
               <h6 class="media-heading"></h6>
            </div>
         </div>
      </header>
      <br>
      <div id="profile-container" class="row">
         <div class="col-md-4">
            <div>
               <section id="my-subjects" class="col-sm-12">
                  <div class="cv-title">Mis temas de interés</div>
                  <%= render partial: 'tags/tags_list', locals: {tags: @tags} %>
               </section>
            </div>
         </div>
         <section class="my-participations col-sm-8">
            <div class="open-title">Participaciones recientes</div>
            <div class="polls-wrapper">
              <% if @participations.present? %>
                <% @participations.first(2).each do |poll| %>
                  <%= render partial: 'polls/partials/poll_preview', locals: {poll: poll} %>
                <% end %>
              <% else %>
                <h2> Aquí encontrarás el historial de tus participaciones.</h2>
                <h2> Aún no has votado por ningúna propuesta, ¡Te invitamos a votar! </h2>
              <% end %>
            </div>
            <% if @participations.size > 2 %>
              <div class="open-title other">Otras participaciones</div>
              <div class="polls-wrapper">
                <% @participations[2..@participations.size].each do |poll| %>
                  <%= render partial: 'polls/partials/poll_small_preview', locals: {poll: poll} %>
                <% end %>
              </div>
            <% else %>
              <div class='spacer-big'></div>
            <% end %>
         </section>
      </div>
   </div>
    <%= render partial: 'layouts/partials/you_may_also_like' %>
   </div>
</div>