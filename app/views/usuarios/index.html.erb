<p id="notice"><%= notice %></p>

<h1>Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Primer apellido</th>
      <th>Segundo apellido</th>
      <th>Nombres</th>
      <th>Tipo de documento</th>
      <th>Numero documento</th>
      <th>Fecha expedicion</th>
      <th>Rol</th>
      <th>Nombre usuario</th>
      <th>Valido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.primer_apellido %></td>
        <td><%= usuario.segundo_apellido %></td>
        <td><%= usuario.nombres %></td>
        <td><%= usuario.tipo_de_documento.code_view %></td>
        <td><%= usuario.numero_documento %></td>
        <td><%= usuario.fecha_expedicion %></td>
        <td><%= usuario.role.code %></td>
        <td><%= usuario.valido %></td>
        <td><%= link_to 'Show', usuario %></td>
        <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Destroy', usuario, method: :delete, data: { confirm: t(:confirmar) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


