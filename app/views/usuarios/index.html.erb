<p id="notice"><%= notice %></p>

<h1>Usuarios</h1>

<div class="container">
	<div class="row">
        <div class="span12">
    		<ul class="thumbnails">
          <% @usuarios.each do |usuario| %>
                <li class="span5 clearfix">
                  <div class="thumbnail clearfix">
                    <img src="<%= get_photo_url(usuario) %>"  alt="ALT NAME" class="pull-left span2 clearfix" style='margin-right:10px; height: 150px;'>
                    <div class="caption" class="pull-left">
                      <a href="http://bootsnipp.com/" class="btn btn-primary icon  pull-right">Select</a>
                      <h4>
                      <a href="#" >
                        <%= usuario.nombres %>
                        <%= usuario.primer_apellido %>
                        <%= usuario.segundo_apellido %>
                      </a>
                      </h4>
                      <p><small><b>Tipo de documento: </b><%= usuario.tipo_de_documento.code_view %></small></p>
                      <p><small><b>Numero documento:  </b><%= usuario.numero_documento %></small></p>
                      <p><small><b>Fecha expedicion:  </b><%= usuario.fecha_expedicion %></small></p>
                    </div>
                  </div>
                </li>
          <% end %>

            </ul>
        </div>
	</div>
</div>


