              <img class="d-block w-100" src="https://si-yo-fuera-presidente.s3.amazonaws.com/uploads/proposal/carousel_image_desktop/6/slide-4.png"
                alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="https://si-yo-fuera-presidente.s3.amazonaws.com/uploads/proposal/carousel_image_desktop/1/slide-3.png"
                alt="Second slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
