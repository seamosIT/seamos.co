<div class="row">
  <div class="col-md-12 admin-poll">
    <div class='spacer-small'></div>
    <div class="row">
      <div class="col-md-12 center">
        <h4>
          <strong >
            <%= link_to poll_path(poll) do %>
              <%= poll.title%>
            <% end %>
          </strong>
        </h4>
      </div>
      <div id="poll-status" class="col-md-12">
        <% if !poll.closed?%>
        <i class="material-icons mdl-list__item-avatar active">done</i>
          <span><%= "Propuesta abierta" %></span>
        <% else %>
          <i class="material-icons mdl-list__item-avatar inactive">clear</i>
          <span><%= "Propuesta cerrada" %></span>
        <% end %>
        <span>
          <%= "| #{poll.active? ? 'Aprobada (publicada)' : 'Sin Aprobar (no publicada)'}" %>
        </span>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-3" >
        <%= link_to poll_path(poll) do %>
          <img src="<%= poll.poll_image %>"  style='width: 100%; ' alt="">
        <% end %>
      </div>
      <div class="col-md-9">
        <p style="max-height: 75px; overflow: hidden">
          <%= poll.description.first(500).html_safe %>
        </p>
        <ul class="list-inline list-unstyled">
          <%poll.tags.each do |tag| %>
          <li class="badge badge-secondary"><%=tag.name%></li>
          <%end%>
        </ul>
        <ul class="list-inline list-unstyled">
          <% if current_user.administrador? || current_user.politico?%>
            <span> <%= link_to "Editar propuesta" , edit_admin_poll_path(poll.id), class: "btn btn-info" %></span>
            <span> <%= link_to "Eliminar propuesta", admin_poll_path(poll.id), class: "btn btn-danger", method: :delete, data: {confirm: t(".confirmation")}  %></span>
            <% if current_user && current_user.administrador? %>
              <span>  <%= link_to  (poll.active? ? "Ocultar propuesta" : "Publicar propuesta") , admin_poll_toggle_active_flag_path(poll), method: :patch, data: {confirm: poll.active? ? t(".hide_poll?") : t(".publish_poll?")}, class: 'btn btn-info' %></span>
            <% end %>
          <% end %>
          <br>
          <span>
             cierre:
            <%= poll.closing_date %>
          </span>
          <span>
            | creación:
            <%= poll.created_at.to_date %>
          </span>
          <span>
            | última actualización:
            <%= poll.updated_at.to_date %>
          </span>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class='spacer-small'></div>
