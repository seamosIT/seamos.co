<div id="new_admin_form">

    <%= form_for(user, url: admin_index_path) do |f| %>
    <%= render 'shared/mensajes_de_error',  object: f.object %>

    <div class="field">
      <%= f.label "Nombres" %>
      <%= f.text_field :names, class: 'form-control' %>
    </div>

    <div class="field">
        <%= f.label "Primer Apellido" %>
        <%= f.text_field :first_surname, class: 'form-control' %>
    </div>

    <div class="field">
        <%= f.label "Segundo Apellido" %>
        <%= f.text_field :second_surname, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label "Organización" %>
      <%= f.text_field :organization, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label "Biografía" %>
      <%= f.text_area :bio, class: 'form-control' %>
    </div>

    <div class="field">
        <%= f.label "Email" %>
        <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="field">
        <%= f.label "Foto" %>
        <%= f.file_field :admin_photo %>
    </div>

    <div class="field">
        <%= f.label "Contraseña" %>
        <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="field">
        <%= f.label "Confirmación de contraseña" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>

    <div class="radio_button_field">
        <%= f.label "Tipo de rol" %><br/><br>
        <%= f.radio_button :role_type, "administrador" %>
        <%= f.label :role_type, "Administrador"%><br>
        <%= f.radio_button :role_type, "politico" %>
        <%= f.label :role_type, "Politico",class: "radio_button_lbl"  %>
    </div>

    <br><br>

    <div class="actions">
        <%= f.submit(data: {disable_with: I18n.t(:processing)}, class: "btn btn-primary") %>
    </div>
    <br><br>
    <% end %>

</div>
