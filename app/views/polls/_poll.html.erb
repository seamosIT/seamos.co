

<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-12 center">
        <h4>
          <strong >
            <%= link_to poll.title, poll_path(poll.id), style: "color: #393939;" %>
          </strong>
        </h4>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-3" >
        <a href="#"  >
          <img src="<%= poll.poll_image %>"  style='width: 180px; ' alt="">
        </a>
      </div>
      <div class="col-md-8">
        <p>
          <%= poll.description %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <ul class="list-inline list-unstyled">
          <li><span><i class="icon-calendar"></i> <%= poll.closing_date %></span></li>
          <% if is_admin? %>
            <li>|</li>
            <span> <%= link_to t('.edit_poll'), edit_poll_path(poll.id), class: "btn btn-default" %></span>
            <li>|</li>
            <span> <%= link_to t('.poll_debates'), poll_debates_path(poll.id), class: "btn btn-default", method: :get %></span>
            <li>|</li>
            <span> <%= link_to t('.delete_poll'), poll, class: "btn btn-danger", method: :delete, data: {confirm: t(".confirmation")}  %></span>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<hr>
