<div id="voted-polls">
  <main class="mdl-layout__content">
    <section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
      <div class="mdl-card mdl-cell mdl-cell--12-col">
        <div class="mdl-card__supporting-text mdl-grid mdl-grid--no-spacing">
          <% @polls.each do |poll|  %>
            <div class="section__text mdl-cell mdl-cell--10-col-desktop mdl-cell--6-col-tablet mdl-cell--3-col-phone">
              <h5><%= poll.title %></h5>
              <span class="text" ><%= poll.description[0..140] %> ...<span/>
              <br> <%= link_to 'Leer mÃ¡s', poll_path(poll) %>

            </div>
            <div class="section__circle-container mdl-cell mdl-cell--2-col mdl-cell--1-col-phone">
              <a href="<%= poll_path(poll) %>" class="mdl-button mdl-js-button mdl-js-ripple-effect">
                <i class="material-icons ">keyboard_arrow_right</i>
              </a>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  <main/>
</div>
<script type="text/javascript">
  var parent = document.getElementById("voted-polls").parentElement
  parent.style.padding = "0";
</script>
