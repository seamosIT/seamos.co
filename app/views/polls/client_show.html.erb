<div id="poll-detail-global-wrapper">
  <section id="poll-detail">
    <div class="top-color-bar" style="background-color: <%= @tag.tag_color %>">
        <div class="tag-name">
          <%= @tag.name %>
        </div>
    </div>
    <div class="container">
        <section id="politician" class="row">
          <img src="<%= @author.admin_photo.url%>" role="presentation" alt="politician">
          <div id="politician-info">
              <a id="author" href="/#/proponents/19">
                <%= @author.full_name %>
              </a>
              <div id="org">
                <%= @author.organization %>
              </div>
          </div>
        </section>
        <div class="share-wrapper">
          <span class="share-this hide-on-mobile"> COMPARTIR: </span>
          <div role="button" tabindex="0" class="SocialMediaShareButton SocialMediaShareButton--facebook network__share-button"><a class="fa fa-facebook" rel="noopener noreferrer" style="display: block;"></a><br></div>
          <div role="button" tabindex="0" class="SocialMediaShareButton SocialMediaShareButton--twitter network__share-button"><a class="fa fa-twitter" rel="noopener noreferrer" style="display: block;"></a><br></div>
        </div>
        <header class="row">
          <p class="col-sm-12 poll-title">
            <%= @poll.title %>
          </p>
        </header>
        <section id="poll" class="row">
          <div id="left-col" class="col-sm-4">
              <div id="poll-image-container">
                <img id="poll-thumbnail" src="<%= @poll.poll_image %>" role="presentation" alt="poll thumbnail">
              </div>
              <% if @poll.closed? %>
                <div class="closed-ribbon-wrapper">
                  <div class="closed-ribbon" style="display: flex;">Propuesta Cerrada</div>
                </div>
              <% end %>
              <p id="objective" class="row" style="display: none;">
                <strong> Objetivo: </strong>
                <%= @poll.objective %>
              </p>
              <div id="poll-states">
                <img src="<%= @status_image %>" class="state">
              </div>
              <div class="external-links-container"></div>
              <div class="external-links-container"></div>
          </div>
          <div class="col-sm-8">
              <div class="row">
                <div class="col-sm-12">
                    <div class="row">
                      <div class="col-xs-12 col-sm-6 buttons-wrapper">
                          <button class="progress btn voted-button">
                            <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: 87%; cursor: default; background-color: gainsboro;"><span id="vote-name">SI</span><span id="percentage">87%</span></div>
                          </button>
                          <button class="progress btn voted-button">
                            <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: 13%; cursor: default; background-color: gainsboro;"><span id="vote-name">NO</span><span id="percentage">13%</span></div>
                          </button>
                      </div>
                      <div class="col-xs-12 col-sm-12 poll-details"><span> propuesta cerrada</span></div>
                    </div>
                    <div class="summary">
                      @poll.summary
                    </div>
                </div>
                <div class="poll-description-container col-sm-12">
                    <div class="poll-static-title"> La Propuesta: </div>
                    <div class="poll-description" style="max-height: 9999px;">
                      <%= @poll.description.html_safe %>
                    </div>
                </div>
              </div>
          </div>
        </section>
    </div>
  </section>
</div>