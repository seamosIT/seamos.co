#intro {
  background-image: url(<%= asset_path 'introBackgroundImage.png' %>);
  background-position: center center;
  background-size: cover;
  display: flex;
  flex-direction: column;;
  justify-content: space-around;
  min-height: 600px;
  height: 85vh;
  .row:first-child {
    #cloud {
      color: #fff;
      width: 100%;
      // background-image: url('/assets/cloudForm.png');
    }
  }
  .row:nth-child(2) {
    div {
      text-align: center;
      #infography{
        width: 90%;
        // background-image: url('/assets/infographyBackgroundImage.png');
        background-image: url(<%= asset_path 'infographyBackgroundImage.png' %>);
        background-size: 100% 100%;
      }
    }
  }
  .row:nth-child(3) {
      img {
        width: 40%;
        float: right;
      }

  }
}
